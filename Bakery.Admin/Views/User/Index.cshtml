@using Bakery.DataTransferObject.DTOs.Users
@model PostUser
@{
    ViewData["Title"] = "Register";
	Layout = null;
}
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="shortcut icon" type="image/x-icon" href="/assets/img/favicon.png">
		
		<!-- Bootstrap CSS -->
        <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
		
		<!-- Fontawesome CSS -->
        <link rel="stylesheet" href="/assets/css/font-awesome.min.css">
		
		<!-- Lineawesome CSS -->
		<link rel="stylesheet" href="/assets/css/line-awesome.min.css">
		
		<!-- Main CSS -->
        <link rel="stylesheet" href="/assets/css/style.css">
        <!-- Arabic and Urdu Font -->
        <link rel="stylesheet" href="/css/font.css">
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
<!-- Account Logo -->
					<div class="account-logo">
						@*<a href="index.html"><img src="assets/img/logo2.png" alt="Dreamguy's Technologies"></a>*@
					</div>
					<!-- /Account Logo -->
					
					<div class="account-box">
						<div class="account-wrapper">
							<h3 class="account-title">Register</h3>							
							<!-- Account Form -->
							<form asp-action="Index">
								<input type="hidden" asp-for="IsActive" value="0" />
								<input type="hidden" asp-for="RoleId" value="1" />
								<div class="form-group">
									<label>Full Name</label>
									<input asp-for="Name" class="form-control" type="text">
								</div>
								<div class="form-group">
									<label>Mobile</label>
									<input asp-for="Cell" class="form-control" type="text">
								</div>
								<div class="form-group">
									<label>Email</label>
									<input asp-for="Email" class="form-control" type="text">
								</div>
								<div class="form-group">
									<label>Password</label>
									<input asp-for="Password" class="form-control" type="password">
								</div>
								<div class="form-group">
									<label>Repeat Password</label>
									<input id="repeatPassword" class="form-control" type="password" onchange="Repeat()">
								</div>
								<div class="form-group text-center">
									<button id="btnSubmit" class="btn btn-primary account-btn" disabled="disabled" type="submit">Register</button>
								</div>
								<div class="account-footer">
									<p>Already have an account? <a asp-controller="Account" asp-action="Login">Login</a></p>
								</div>
							</form>
							<!-- /Account Form -->
						</div>
					</div>
					        </main>
    </div>

        		<!-- jQuery -->
        <script src="/assets/js/jquery-3.6.0.min.js"></script>
		
		<!-- Bootstrap Core JS -->
        <script src="/assets/js/bootstrap.bundle.min.js"></script>
		
		<!-- Slimscroll JS -->
		<script src="/assets/js/jquery.slimscroll.min.js"></script>
		
		<!-- Select2 JS -->
		<script src="/assets/js/select2.min.js"></script>
		
		<!-- Task JS -->
		<script src="/assets/js/task.js"></script>
		
		<!-- Custom JS -->
		<script src="/assets/js/app.js"></script>
</body>
<script type="text/javascript">
	function Repeat()
	{
		var repeat = document.getElementById('repeatPassword').value;
		var pass = document.getElementById('Password').value;
		var btn = document.getElementById('btnSubmit');
		if(repeat == pass)
		{
			btn.removeAttribute("disabled","disabled");
		}
		else
		{
			btn.setAttribute("disabled","disabled");
		}
	}
</script>